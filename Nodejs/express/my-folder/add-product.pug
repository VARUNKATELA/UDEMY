block content 
  main
    form(method='POST' action='/admin/add-product').m-5
      .mb-3
        label.form-label Name of Product
        input.form-control(type='text' name='product_name')
      .mb-3
        label.form-label Description 
        input.form-control(type='text' name='description')
      .mb-3
        label.form-label Price
        input.form-control(type='number' name='price')
      .mb-3
        label.form-label Sold by
        input.form-control(type='text' name='sold_by')
      button.btn.btn-success(type='submit') Add



